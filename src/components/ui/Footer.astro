---
import { Image } from "astro:assets";
import Instagram from "../../assets/instagram.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "./public/logo.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  
  { name: "Linkedin", src: Linkedin, link: "https://www.linkedin.com/company/bubblebuddydev/" },
  
];

const links = [
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
];
---

<section class="sm:px-5" id="footer">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="/" style="font-size: 30px;" class="flex items-center space-x-3 rtl:space-x-reverse">
              <img src="/logonew.png" height="200%" width="200%" class="h-10" alt="Logo" /> &nbsp;BubbleBuddy
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contact us</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: contact.bubblebuddydev@gmail.com </span>
              <span> Phone: +918767386340 </span>
              <span class="lg:w-3/4">
                Address: Pune, Maharashtra.
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >Â© 2024 BubbleBuddy - Made With <a
            class="underline"
            target="_blank"
            href="https://astro.build">Astro</a
          > by 
          <a 
          class="underline"
          target="_blank"
          href="https://chiragferwani.vercel.app/">Chirag</a
          ></span
        >&nbsp
       
      </div>
    </div>
  </div>
</section>
