---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meet the Talented Minds Driving Innovation and Success at BubbleBuddy";

// Team images
import p1 from "../../assets/team/chirag.png";
import p2 from "../../assets/team/atharva.png";
import p3 from "../../assets/team/yash.png";
import p4 from "../../assets/team/t4.png";
import p5 from "../../assets/team/t5.png";
import p6 from "../../assets/team/t6.png";

const team = [
  {
    pic: p1,
    name: "Chirag Ferwani",
    role: "CEO and Founder",
    description:
      "Leads operations, project management, and app development with a focus on innovation and timely delivery.",
    link: "https://www.linkedin.com/in/chiragferwani/",
  },
  {
    pic: p2,
    name: "Atharva Kakade",
    role: "UI/UX Designer",
    description:
      "Specializes in intuitive designs for apps, websites, and logos, enhancing user experience and creativity.",
    link: "https://www.linkedin.com/in/atharva-kakade/",
  },
  {
    pic: p3,
    name: "Yash Chavan",
    role: "Web Developer",
    description:
      "Builds responsive, high-performance websites with a focus on reliability and user satisfaction.",
    link: "https://www.linkedin.com/in/yash-chavan-78b009233/",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
  </div>
</Section>
